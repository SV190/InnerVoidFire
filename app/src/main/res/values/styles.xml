<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.InnerVoid.ProductName" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/jomhuria</item>
    </style>

    <style name="TextAppearance.InnerVoid.ProductPrice" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/jomhuria</item>
    </style>

    <style name="TextAppearance.InnerVoid.Default" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/jomhuria</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.InnerVoid.Message" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@font/jomhuria</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="TextAppearance.InnerVoid.MessageTime" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:fontFamily">@font/jomhuria</item>
    </style>

    <style name="Widget.InnerVoid.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">32dp</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="itemRippleColor">@color/ripple_color</item>
        <item name="android:background">?android:attr/windowBackground</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.InnerVoid.BottomNavigation.Active</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.InnerVoid.BottomNavigation.Inactive</item>
    </style>

    <style name="TextAppearance.InnerVoid.BottomNavigation.Active" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.InnerVoid.BottomNavigation.Inactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#757575</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources> 